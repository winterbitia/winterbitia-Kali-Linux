	#BASICS
# Set MOD key to Super/Win
set $mod Mod4

# Font for everything used by i3
font pango:DejaVuSansM Nerd Font Mono 12



	#AUTOSTARTS
# Autostart XDG  .desktop files using dex.
exec --no-startup-id dex --autostart --environment i3

# Autostart for betterlockscreen
exec --no-startup-id betterlockscreen -w

# Autostart nm-applet, system tray GUI for NetworkManager
exec --no-startup-id nm-applet

# Autostart for xfce clipboard manager
exec --no-startup-id "xfce4-clipman &"

# Autostart for PolicyKit (su authentication for apps)
exec --no-startup-id lxpolkit

# Autostart for dunst, the notification daemon
exec_always --no-startup-id dunst

# Autostart for wallpaper service
exec_always --no-startup-id feh --bg-fill --zoom fill ~/Pictures/wpp/wallpapers/rose_pine_circle2.png
#exec_always --no-startup-id feh --bg-fill --zoom fill ~/Pictures/wpp/skypastel.jpg

# Autostart for compositor (transparency, blur, etc) through a shell script
exec_always --no-startup-id picomreset

# Autostart polybar (the main bar used)
exec_always --no-startup-id /home/winter/.config/polybar/launch.sh


	#BEHAVIOR
# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Global window rules
for_window [class="^.*"] border pixel 2
for_window [window_type="pop-up"] floating enable
no_focus [window_type="pop-up"]

# Yad behavior
for_window [class="Yad" title="yad-calendar"] floating enable
for_window [class="Windscribe"] floating enable

# Set Zoom notification window to floating with no focus
for_window [title="^zoom\s?$"] floating enable
no_focus [title="^zoom\s?$"]

# For meetings that you have joined via a link
for_window [title="^join\?action=join.*$"] floating enable
no_focus [title="^join\?action=join.*$"]

# Window gaps setup
smart_gaps off
smart_borders no_gaps
set $padding 10
set $margin 2 

# Window gaps activate
gaps inner $padding
gaps outer $margin
gaps top 40

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Move tiling windows via drag & drop by left-clicking into the title bar,
# or left-clicking anywhere into the window while holding the floating modifier.
tiling_drag modifier titlebar

# Start a terminal
bindsym $mod+Return exec kitty

# Kill focused window
bindsym $mod+q kill
bindsym --whole-window $mod+button2 kill

# Use rofi for launching applications and programs 
bindcode $mod+40 exec "rofi -modi drun,run -show drun"
bindcode $mod+shift+40 exec "rofi -modi run,run -show run"

# Note : directional-based binds use Vim style (H,J,K,L)
# Change focused window
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
# Move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Split in horizontal orientation
bindsym $mod+b split h
# Split in vertical orientation
bindsym $mod+v split v

# Enter fullscreen mode for the focused container
bindsym $mod+Shift+f fullscreen toggle

# Change container layout (stacked, tabbed, toggle split)
bindsym $mod+Shift+q layout stacking
bindsym $mod+Shift+w layout tabbed
bindsym $mod+Shift+e layout toggle split

# Toggle tiling / floating
bindsym $mod+Shift+space floating toggle
bindsym --whole-window $mod+button3 floating toggle

# Change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# Focus the parent container
bindsym $mod+a focus parent
# Focus the child container
bindsym $mod+Shift+a focus child

# Define names for default workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 ""
set $ws10 ""

# Cycle workspace using a shell script
bindsym $mod+Tab workspace next
bindcode $mod+49 workspace prev

# Switch to specific workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# Move focused window to different workspaces
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Shortcut to reload the configuration file
bindsym $mod+Shift+c reload
# Shortcut to restart i3 (used for config updates)
bindsym $mod+Shift+r restart

# Mode for resizing windows
mode "R" {
		# Resize based on Cartesian coordinate directions
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize shrink height 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize shrink height 10 px or 10 ppt
        bindsym Up resize grow height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # Back to normal
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

# Activate resize mode
bindsym $mod+r mode "R"

# System actions
bindsym $mod+w exec "rofi-wifi-menu.sh"
bindsym $mod+z exec betterlockscreen -l
bindsym $mod+Shift+z exec "rofi -show power-menu -modi power-menu:'rofi-power-menu --no-symbols'"

# Shortcuts for flameshot, the screenshot tool
bindcode $mod+39 exec flameshot full --clipboard --path ~/Pictures/screenshot/
bindcode $mod+107 exec flameshot full --clipboard --path ~/Pictures/screenshot/
bindcode $mod+Shift+39 exec flameshot gui --clipboard --path ~/Pictures/screenshot/

# Shortcuts for Spotify playerctl
bindcode $mod+34 exec "playerctl --player=spotify previous"
bindcode $mod+35 exec "playerctl --player=spotify next"
bindcode $mod+48 exec "playerctl --player=spotify play-pause"
bindcode $mod+Shift+34 exec "playerctl --player=spotify volume 0.05-"
bindcode $mod+Shift+35 exec "playerctl --player=spotify volume 0.05+"

